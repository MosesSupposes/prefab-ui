{
  "compilerOptions": {
    "target": "es2017",
    "module": "umd",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "**/dist"
  ]
}
